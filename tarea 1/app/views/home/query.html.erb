    <table border="0">
    <caption>RESULTADOS</caption>

      <% @calls.each do |call| %>
      <tr>
        <td style="text-align:left">

          <a href='search?info=<%= call['name'] %>&type=people'>
            <%= call['name'] %>
          </a>
        </td>
        <td>
          <a href='search?info=<%= call['title'] %>&type=films'>
